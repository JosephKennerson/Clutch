<p id="notice"><%= notice %></p>

<h1>Listing Rsvps</h1>

<table>
  <thead>
    <tr>
      <th>Guest</th>
      <th>Event</th>
      <th>Pending</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.guest_id %></td>
        <td><%= rsvp.event %></td>
        <td><%= rsvp.pending %></td>
        <td><%= rsvp.confirmed %></td>
        <td><%= link_to 'Show', rsvp %></td>
        <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
        <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

